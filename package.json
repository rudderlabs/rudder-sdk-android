{
  "name": "@rudderstack/rudder-sdk-android-monorepo",
  "version": "2.0.0",
  "description": "Rudder Android SDK monorepo",
  "keywords": [
    "android",
    "rudder",
    "kotlin"
  ],
  "author": "RudderStack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudderlabs/rudder-sdk-android.git"
  },
  "bugs": {
    "url": "https://github.com/rudderlabs/rudder-sdk-android/issues"
  },
  "homepage": "https://github.com/rudderlabs/rudder-sdk-android#readme",
  "scripts": {
    "bump-version:monorepo": "npm version minor --git-tag-version false",
    "build": "./gradlew build",
    "lint": "nx affected --base=origin/master-v2 --target=lint --parallel=4 --exclude=app,core,android --skipCommitTypes=docs,ci,chore",
    "ktformat": "nx affected --base=origin/master-v2 --target=ktformat --parallel=1 --exclude=app,core,android --skipCommitTypes=docs,ci,chore",
    "test": "nx affected --base=origin/master-v2 --target='test' --parallel=1 --exclude=app,core,android --skipCommitTypes=docs,ci,chore",
    "release": "nx affected --base=origin/master-v2 --target=version --parallel=1 --exclude=app,core,android --skipCommitTypes=docs,ci,chore",
    "release:github": "nx affected --target=github --parallel=1 --exclude=app,core,android --skipCommitTypes=docs,ci,chore",
    "release:sonatype": "nx affected --target=release-sonatype --parallel=1 --exclude=app,core,android",
    "release-snapshot:sonatype": "nx affected --target=snapshot-release --parallel=4 --exclude=app,core,android"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@digitalroute/cz-conventional-changelog-for-jira": "8.0.0",
    "@jscutlery/semver": "2.30.1",
    "@nrwl/cli": "15.8.9",
    "@nrwl/detox": "15.8.9",
    "@nrwl/eslint-plugin-nx": "15.8.9",
    "@nrwl/linter": "15.8.9",
    "@nrwl/web": "15.8.9",
    "@nrwl/workspace": "15.8.9",
    "@rnx-kit/metro-resolver-symlinks": "0.1.27",
    "commitizen": "4.3.0",
    "commitlint": "17.5.1",
    "conventional-changelog-cli": "2.2.2",
    "conventional-github-releaser": "3.1.5",
    "nx": "16.5.3",
    "@jnxplus/nx-gradle": "^0.6.1"
  },
  "dependencies": {
    "properties-reader": "^2.2.0",
    "@rudderstack/core": "file: ./core",
    "@rudderstack/android": "file: ./android",
    "@rudderstack/web":"file: ./web",
    "@rudderstack/gsonrudderadapter":"file: ./gsonrudderadapter",
    "@rudderstack/repository":"file: ./repository",
    "@rudderstack/models":"file: ./models",
    "@rudderstack/rudderjsonadapter":"file: ./rudderjsonadapter",
    "@rudderstack/jacksonrudderadapter":"file: ./jacksonrudderadapter",
    "@rudderstack/moshirudderadapter":"file: ./moshirudderadapter"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraMode": false,
      "jiraOptional": true,
      "skipScope": false,
      "scopes": [
        "android"
      ],
      "maxHeaderWidth": 120,
      "defaultScope": "@rudderstack/rudder-sdk-android-monorepo",
      "defaultType": "feat"
    }
  }
}
